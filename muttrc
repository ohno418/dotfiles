# Use an application specific password here.
set my_gmail_password = ""

#--- Basics ---
set realname = "Yutaro Ohno"
set from = "yutaro.ono.418@gmail.com"
set editor = nvim
set charset = UTF-8

set edit_headers = yes
set use_domain = no
set use_from = yes
# Don't append FCC header.
set copy = no

#--- Status bar ---
set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

#--- Index ---
set date_format = "%m/%d"
set index_format = "[%Z]  %D  %-20.20F  %s"
set sort = threads
set sort_aux = reverse-last-date-received
set mark_old = no

#--- Pager ---
set pager_stop = yes

#--- IMAP ---
set imap_user = "yutaro.ono.418@gmail.com"
set imap_pass = $my_gmail_password
set folder    = "imaps://imap.gmail.com/"
set spoolfile = "imaps://imap.gmail.com/INBOX"
set record    = "imaps://imap.gmail.com/[Gmail]/Sent Mail"
set postponed = "imaps://imap.gmail.com/[Gmail]/Drafts"
set mbox      = "imaps://imap.gmail.com/[Gmail]/All Mail"
set header_cache     = ~/.mutt/cache/headers
set message_cachedir = ~/.mutt/cache/bodies
set certificate_file = ~/.mutt/certificates

#--- SMTP ---
set smtp_url = "smtp://yutaro.ono.418@smtp.gmail.com:587/"
set smtp_pass = $my_gmail_password
set ssl_force_tls = yes # Require encrypted connection

