        # colors {
        #         background $bg
        #         focused_background $bg
        #         focused_workspace $orange $orange $bg
        #         inactive_workspace $bg $bg $fg
        # }
}

# not focus by mouse
focus_follows_mouse no

# focus colors
# class                     border      background      text        indicator       child_border
client.focused              $fg         $bg             $fg         $darkgreen      $darkgreen
client.unfocused            $bg         $bg             $fg         $darkgreen      $bg
